<!-- header.ejs -->

<!-- Sticky Header -->
<header>
  <nav class="navbar is-opaque is-fixed-top" role="navigation" aria-label="main navigation">
      <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
            <div class="navbar-item has-text-centered">
              <!-- Home button -->
              <a class="button is-light" href="/">
                Home
              </a>
            </div>
            <!-- Additional navbar item for Create a New Post button -->
            <div class="navbar-item has-text-centered">
              <a class="button is-light" href="/create-post">
                Create a New Post
              </a>
            </div>
              <!-- Additional navigation items can be added here -->
          </div>

          <div class="navbar-end">
              <div class="navbar-item">
                <div class="buttons">
                  <% if (user_id) { %>
                    <!-- If user is logged in, show profile and logout buttons -->
                    <a href="/user-threads" class="button is-light">Your Threads</a>
                    <a href="/profile" class="button is-primary">Profile</a>
                    <form action="/logout" method="post" style="display: inline;">
                        <button type="submit" class="button is-light">Logout</button>
                    </form>
                  <% } else { %>
                    <!-- If user is not logged in, show login button -->
                    <a href="/login" class="button is-light">Login</a>
                  <% } %>
                </div>
              </div>
          </div>
      </div>
  </nav>
</header>
<!-- End of Header -->
